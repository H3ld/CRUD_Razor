@page
@model CRUD_Razor.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Create</h2>

<div style="border:1px solid #bbb9b9; border-radius:10px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="Book.Id" />
        <div class="row" style="padding:30px">

            <!-- Book Name-->
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Name" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>

            <!-- Book Author-->
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Author" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>

            <!-- Book ISBN-->
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Isbn"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Isbn" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Isbn" class="text-danger"></span>
            </div>
            <br />

            <!-- Submit or Back -->
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary btn-sm" />
                <a asp-page="Index" class="btn btn-success btn-sm">Back to List</a>
            </div>

        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}